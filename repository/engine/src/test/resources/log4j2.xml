<Configuration>
  <Appenders>

    <!-- console -->
    <Console name="console" target="SYSTEM_OUT">
      <Filters>
        <ThresholdFilter level="debug"/>
        <StringMatchFilter/>
      </Filters>
      <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} %-5p [%C.%M():%L] %m%n"/>
    </Console>

    <!-- log4j.log -->
    <File name="root" fileName="log4j.log">
      <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} %-5p %t [%C.%M():%L] %m%n"/>
    </File>

  </Appenders>
  <Loggers>
    <Logger name="org.apache.jackrabbit" level="warn"/>
    <Logger name="org.hippoecm.repository" level="warn"/>
    <Logger name="org.hippoecm.repository.impl.LockManagerDecorator" level="debug"/>
    <Logger name="org.hippoecm.repository.HippoNodeTypeSanityTest" level="error"/>
    <Logger name="org.hippoecm.repository.quartz.JCRJobStore" level="error"/>
    <!-- Suppress javax.management.InstanceAlreadyExistsException from:
           org.hippoecm.repository.jackrabbit.RepositoryImpl.registerJmxRepositoryStatistics()
    -->
    <logger name="org.hippoecm.repository.jackrabbit.RepositoryImpl" level="error"/>

    <Root level="warn">
      <AppenderRef ref="console"/>
      <AppenderRef ref="root"/>
    </Root>
  </Loggers>
</Configuration>
