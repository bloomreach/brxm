<Configuration>
  <Appenders>

    <!-- console -->
    <Console name="console" target="SYSTEM_OUT">
      <StringMatchFilter/>
      <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} %-5p [%C.%M():%L] %m%n"/>
    </Console>

    <!-- log4j.log -->
    <File name="root" fileName="log4j.log">
      <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} %-5p %t [%C.%M():%L] %m%n"/>
    </File>

  </Appenders>
  <Loggers>
    <Logger additivity="true" name="org.hippoecm.repository" level="warn">
      <AppenderRef ref="console"/>
    </Logger>
    <Logger additivity="false" name="org.hippoecm.repository.ocm" level="warn">
      <AppenderRef ref="root"/>
    </Logger>

    <Logger additivity="false" name="org.apache.wicket" level="warn">
      <AppenderRef ref="console"/>
    </Logger>

    <Logger additivity="false" name="org.apache.jackrabbit" level="warn">
      <AppenderRef ref="root"/>
    </Logger>

    <!-- SCXML workflow -->
    <Logger additivity="false" name="org.apache.commons.scxml2" level="warn">
      <AppenderRef ref="console"/>
    </Logger>
    <Logger additivity="false" name="org.onehippo.repository.scxml" level="warn">
      <AppenderRef ref="console"/>
    </Logger>
    <Logger additivity="false" name="org.onehippo.repository.documentworkflow" level="warn">
      <AppenderRef ref="console"/>
    </Logger>

    <Root level="warn">
      <AppenderRef ref="console"/>
      <AppenderRef ref="root"/>
    </Root>
  </Loggers>
</Configuration>
