<sv:node sv:name="reporting" xmlns:fn="http://www.w3.org/2005/xpath-functions"
  xmlns:fn_old="http://www.w3.org/2004/10/xpath-functions"
  xmlns:hippo="http://www.hippoecm.org/nt/1.3" xmlns:jcr="http://www.jcp.org/jcr/1.0"
  xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
  xmlns:reporting="http://www.hippoecm.org/reporting/nt/1.2"
  xmlns:sv="http://www.jcp.org/jcr/sv/1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <sv:property sv:name="jcr:primaryType" sv:type="Name">
    <sv:value>hippo:namespace</sv:value>
  </sv:property>

  <!-- "report" type -->
  <sv:node sv:name="report">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>hippo:templatetype</sv:value>
    </sv:property>

    <sv:node sv:name="hippo:nodetype">
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>hippo:handle</sv:value>
      </sv:property>
      <sv:node sv:name="hippo:nodetype">
        <sv:property sv:name="jcr:primaryType" sv:type="Name">
          <sv:value>hippo:nodetype</sv:value>
        </sv:property>
        <sv:property sv:name="jcr:mixinTypes" sv:type="Name">
          <sv:value>hippo:remodel</sv:value>
        </sv:property>
        <sv:property sv:name="hippo:uri" sv:type="String">
          <sv:value>http://www.hippoecm.org/reporting/nt/1.2</sv:value>
        </sv:property>
        <sv:property sv:name="hippo:node" sv:type="Boolean">
          <sv:value>true</sv:value>
        </sv:property>
        <sv:property sv:name="hippo:supertype" sv:type="String">
          <sv:value>hippo:document</sv:value>
        </sv:property>

        <!-- query that will generate a resultset-->
        <sv:node sv:name="hippo:field">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:field</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:name" sv:type="String">
            <sv:value>query</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:path" sv:type="String">
            <sv:value>hippo:query</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:type" sv:type="String">
            <sv:value>hippo:query</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:mandatory" sv:type="Boolean">
            <sv:value>true</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:multiple" sv:type="Boolean">
            <sv:value>false</sv:value>
          </sv:property>
        </sv:node>

        <!-- plugin that will render the resultset-->
        <sv:node sv:name="hippo:field">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:field</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:name" sv:type="String">
            <sv:value>frontendplugin</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:path" sv:type="String">
            <sv:value>frontend:plugin</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:type" sv:type="String">
            <sv:value>frontend:plugin</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:mandatory" sv:type="Boolean">
            <sv:value>true</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:multiple" sv:type="Boolean">
            <sv:value>false</sv:value>
          </sv:property>
        </sv:node>

        <!-- query parameter names -->
        <sv:node sv:name="hippo:field">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:field</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:name" sv:type="String">
            <sv:value>parameter-names</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:path" sv:type="String">
            <sv:value>reporting:parameternames</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:type" sv:type="String">
            <sv:value>String</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:mandatory" sv:type="Boolean">
            <sv:value>false</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:multiple" sv:type="Boolean">
            <sv:value>true</sv:value>
          </sv:property>
        </sv:node>

        <!-- query parameter values -->
        <sv:node sv:name="hippo:field">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:field</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:name" sv:type="String">
            <sv:value>parameter-values</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:path" sv:type="String">
            <sv:value>reporting:parametervalues</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:type" sv:type="String">
            <sv:value>String</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:mandatory" sv:type="Boolean">
            <sv:value>false</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:multiple" sv:type="Boolean">
            <sv:value>true</sv:value>
          </sv:property>
        </sv:node>

      </sv:node>
    </sv:node>

    <sv:node sv:name="hippo:prototype">
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>hippo:handle</sv:value>
      </sv:property>
      <sv:node sv:name="hippo:prototype">
        <sv:property sv:name="jcr:primaryType" sv:type="Name">
          <sv:value>reporting:report</sv:value>
        </sv:property>
        <sv:property sv:name="reporting:parameternames" sv:type="String"> </sv:property>
        <sv:property sv:name="reporting:parametervalues" sv:type="String"> </sv:property>
        <sv:node sv:name="hippo:query">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:query</sv:value>
          </sv:property>
          <sv:property sv:name="jcr:language" sv:type="String">
            <sv:value>xpath</sv:value>
          </sv:property>
          <sv:property sv:name="jcr:statement" sv:type="String">
            <sv:value>//element(*,hippo:document)[jcr:contains(.,'onderwerp')]/rep:excerpt(.)</sv:value>
          </sv:property>
        </sv:node>
        <sv:node sv:name="hippo:frontendplugin">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:frontendplugin</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:renderer" sv:type="String">
            <sv:value>org.hippoecm.frontend.plugins.reporting.simple.SimpleReportPlugin</sv:value>
          </sv:property>
        </sv:node>
      </sv:node>
    </sv:node>

  </sv:node>

</sv:node>
