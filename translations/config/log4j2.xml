<Configuration>
  <Appenders>

    <!-- console -->
    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} %-5p [%C.%M():%L] %m%n"/>
    </Console>
    <!-- log4j.log -->
    <File name="root" fileName="log4j.log">
      <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} %-5p %t [%C.%M():%L] %m%n"/>
    </File>

  </Appenders>

  <Loggers>

    <Logger additivity="false" name="org.onehippo.cms.l10n" level="warn">
      <AppenderRef ref="console"/>
    </Logger>

    <Root level="warn">
      <AppenderRef ref="root"/>
    </Root>
  </Loggers>
</Configuration>
