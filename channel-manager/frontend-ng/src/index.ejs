<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hippo Channel Manager Frontend NG</title>

    <% for (let css of htmlWebpackPlugin.files.css) { %>
      <link href="<%= css %>" rel="stylesheet">
    <% } %>
    <% for (let css of uiCss) { %>
      <link href="<%= css %>" rel="stylesheet">
    <% } %>
  </head>

  <body ng-app="hippo-cm" ng-strict-di iframe-asset="<%= htmlWebpackPlugin.files.chunks.iframe.entry %>">
    <div ui-view layout-fill>
      <md-toolbar class="hippo-toolbar">
        <md-progress-linear md-mode="indeterminate"></md-progress-linear>
      </md-toolbar>
    </div>

    <% for (let js of htmlWebpackPlugin.files.js) { %>
      <% if (js !== htmlWebpackPlugin.files.chunks.iframe.entry) { %>
        <script type="text/javascript" src="<%= js %>"></script>
      <% } %>
    <% } %>

    <% for (let js of uiJs) { %>
      <script type="text/javascript" src="<%= js %>"></script>
    <% } %>
  </body>
</html>
