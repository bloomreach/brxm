{
  "hooks": {
    "before:init": "npm run lint && npm run test:single-run",
    "after:bump": "npm run build:prod && npx auto-changelog"
  },
  "git": {
    "requireCleanWorkingDir": true,
    "commitMessage": "TRIVIAL prepare release bloomreach-navigation-application-${version}",
    "tagName": "bloomreach-navigation-application-${version}",
    "tagAnnotation": "Release bloomreach-navigation-application-${version}"
  }
}
