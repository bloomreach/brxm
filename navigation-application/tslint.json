{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "codelyzer"
  ],
  "rules": {
    "align": {
      "options": [
        "parameters",
        "statements"
      ]
    },
    "array-type": [true, "array"],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "arrow-return-shorthand": true,
    "deprecation": {
      "severity": "warning"
    },
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "interface-name": false,
    "max-classes-per-file": false,
    "curly": true,
    "max-line-length": [
      true,
      140
    ],
    "member-access": [true, "no-public"],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "eofline": true,
    "no-consecutive-blank-lines": true,
    "no-console": true,
    "no-empty": false,
    "import-spacing": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": [true, { "grouped-imports": true }],
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "component-class-suffix": true,
    "contextual-lifecycle": true,
    "directive-class-suffix": true,
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],

    "no-conflicting-lifecycle": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "template-banana-in-box": true,
    "contextual-decorator": true,
    "import-destructuring-spacing": true,
    "no-attribute-decorator": true,
    "no-forward-ref": true,
    "no-unused-css": true,
    "no-pipe-impure": true,
    "pipe-naming": ["camelCase"],
    "template-no-negated-async": true,
    "use-pipe-decorator": true,
    "use-component-view-encapsulation": true,
    "no-internal-module": true,
    "no-reference": true,
    "prefer-for-of": true,
    "no-dynamic-delete": true,
    "no-for-in-array": true,
    "no-invalid-template-strings": true,
    "no-sparse-arrays": true,
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "restrict-plus-operands": true,
    "strict-boolean-expressions": false,
    "no-duplicate-imports": true,
    "no-require-imports": true,
    "match-default-export-name": true,
    "no-reference-import": true,
    "no-unnecessary-callback-wrapper": true,
    "object-literal-shorthand": true,
    "semicolon": {
      "options": [
        "always"
      ]
    },
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "prefer-template": true,
    "space-before-function-paren": [true, { "anonymous": "always", "named": "never", "asyncArrow": "always" }],
    "space-within-parens": [true, 0],
    "no-irregular-whitespace": true,
    "new-parens": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "typedef-whitespace": {
      "options": [
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "call-signature": "onespace",
          "index-signature": "onespace",
          "parameter": "onespace",
          "property-declaration": "onespace",
          "variable-declaration": "onespace"
        }
      ]
    },
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ],
    "file-header": [
      true,
      "Copyright \\d{4}(-\\d{4})? BloomReach. All rights reserved. \\(https://www.bloomreach.com/\\)",
      "Copyright 2019 BloomReach. All rights reserved. (https://www.bloomreach.com/)\n\nLicensed under the Apache License, Version 2.0 (the \"License\");\nyou may not use this file except in compliance with the License.\nYou may obtain a copy of the License at\n\n http://www.apache.org/licenses/LICENSE-2.0\n\nUnless required by applicable law or agreed to in writing, software\ndistributed under the License is distributed on an \"AS IS\" BASIS,\nWITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied.\nSee the License for the specific language governing permissions and\nlimitations under the License."
    ],
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case"
      ]
    },
    "whitespace": {
      "options": [
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type",
        "check-typecast"
      ]
    }
  }
}
