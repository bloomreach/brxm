<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

  <bean parent="abstractCrispSimpleJacksonRestTemplateResourceResolver" class="org.onehippo.cms7.crisp.core.resource.jackson.SimpleJacksonRestTemplateResourceResolver">
    <property name="baseUri" value="${bloomreach.baseUrl}"/>
    <property name="restTemplate">
      <bean class="com.onehippo.cms7.personalization.rest.BloomreachRestTemplate">
        <property name="queryVariables">
          <map>
            <entry key="account_id" value="${bloomreach.account_id}"/>
            <entry key="auth_key" value="${bloomreach.auth_key}"/>
            <entry key="domain_key" value="${bloomreach.domain_key}"/>
            <entry key="realm" value="${bloomreach.realm}"/>
            <entry key="fl" value="${bloomreach.fl}"/>
            <entry key="ref_url" value="${bloomreach.ref_url}"/>
            <entry key="url" value="${bloomreach.url}"/>
            <entry key="request_id" value="${bloomreach.request_id}"/>
          </map>
        </property>
        <property name="requestFactory" ref="org.springframework.http.client.ClientHttpRequestFactory"/>
      </bean>
    </property>
    <property name="resourceDataCache">
      <bean class="org.onehippo.cms7.crisp.core.resource.SpringResourceDataCache">
        <constructor-arg>
          <bean class="org.springframework.cache.ehcache.EhCacheCache">
            <constructor-arg>
              <bean parent="abstractCrispResourceEhCache">
                <property name="cacheName" value="bloomreachCache"/>
                <property name="maxEntriesLocalHeap" value="${bloomreach.maxEntriesLocalHeap}"/>
                <property name="maxEntriesLocalDisk" value="${bloomreach.maxEntriesLocalDisk}"/>
                <property name="timeToLiveSeconds" value="${bloomreach.timeToLiveSeconds}"/>
                <property name="timeToIdleSeconds" value="${bloomreach.timeToIdleSeconds}"/>
              </bean>
            </constructor-arg>
          </bean>
        </constructor-arg>
      </bean>
    </property>
  </bean>

</beans>
          