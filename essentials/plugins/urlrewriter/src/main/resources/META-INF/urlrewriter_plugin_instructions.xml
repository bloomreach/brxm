<instructions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.onehippo.org/essentials/instructions /instructions.xsd"
              xmlns="http://www.onehippo.org/essentials/instructions">
  <instructionSet>
    <mavenDependency targetPom="cms-dependencies" groupId="com.onehippo.cms7" artifactId="hippo-addon-urlrewriter-module-cms"/>
    <mavenDependency targetPom="cms-dependencies" groupId="com.onehippo.cms7" artifactId="hippo-addon-urlrewriter-module-repository"/>
    <mavenDependency targetPom="site-components" groupId="com.onehippo.cms7" artifactId="hippo-addon-urlrewriter-module-hst"/>
    <hstBeanClasses pattern="classpath*:org/onehippo/forge/**/*.class" />
    <execute class="com.onehippo.cms7.essentials.plugins.urlrewriter.UrlRewriterInstruction" />
    <file action="copy" source="instructions/xml/spring/urlrewriter-context.xml" target="{{siteResources}}/META-INF/hst-assembly/overrides/urlrewriter-context.xml"/>
  </instructionSet>

  <instructionSet group="sampleData">
    <file action="copy" source="instructions/yaml/sample-rewriter-rules.yaml" target="{{developmentContent}}/essentials/urlrewriter/sample-rewriter-rules.yaml"/>
  </instructionSet>
</instructions>