<instructions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.onehippo.org/essentials/instructions /instructions.xsd" xmlns="http://www.onehippo.org/essentials/instructions">

  <instructionSet>
    <freemarker action="copy" source="freemarker/essentials-menu.ftl" target="{{freemarkerRoot}}/hstdefault/essentials-menu.ftl"/>
    <xml action="copy" source="hst/menu-template-freemarker.xml" target="{{hstRoot}}/hst:configurations/hst:default/hst:templates"/>
    <xml action="copy" source="hst/catalog/menu-catalog-item.xml" target="{{hstRoot}}/hst:configurations/hst:default/hst:catalog/essentials-catalog"/>
    <file action="copy" binary="true" source="images/menu.png" target="{{imagesRoot}}/essentials/catalog-component-icons/menu.png"/>
  </instructionSet>

  <instructionSet group="extraTemplates">
    <freemarker action="copy"
                source="freemarker/essentials-menu-navbar.ftl"
                target="{{freemarkerRoot}}/hstdefault/essentials-menu/navbar.ftl"/>
    <freemarker action="copy"
                source="freemarker/essentials-menu-vertical.ftl"
                target="{{freemarkerRoot}}/hstdefault/essentials-menu/vertical.ftl"/>
    <file action="copy"
          source="freemarker/essentials-menu.properties"
          target="{{freemarkerRoot}}/hstdefault/essentials-menu.properties"/>
    <file action="copy"
          source="freemarker/essentials-menu_nl.properties"
          target="{{freemarkerRoot}}/hstdefault/essentials-menu_nl.properties"/>
  </instructionSet>

</instructions>