<instructions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.onehippo.org/essentials/instructions /instructions.xsd" xmlns="http://www.onehippo.org/essentials/instructions">

  <instructionSet>
    <xml action="copy" source="instructions/xml/hst/image-component-catalog.xml" target="{{hstRoot}}/hst:configurations/hst:default/hst:catalog/essentials-catalog"/>
    <file action="copy" binary="true" source="instructions/images/image.svg" target="{{imagesRoot}}/essentials/catalog-component-icons/image.svg"/>
    <freemarker action="copy" source="instructions/freemarker/image-component.ftl" target="{{freemarkerRoot}}/hstdefault/image-component.ftl"/>
    <xml action="copy" source="instructions/xml/hst/image-component-freemarker.xml" target="{{hstRoot}}/hst:configurations/hst:default/hst:templates"/>
  </instructionSet>

  <instructionSet group="extraTemplates">
    <freemarker action="copy"
                source="instructions/freemarker/image-component-with-description.ftl"
                target="{{freemarkerRoot}}/hstdefault/image-component/with-description.ftl"/>
    <file action="copy"
          source="instructions/freemarker/image-component.properties"
          target="{{freemarkerRoot}}/hstdefault/image-component.properties"/>
    <file action="copy"
          source="instructions/freemarker/image-component_nl.properties"
          target="{{freemarkerRoot}}/hstdefault/image-component_nl.properties"/>
  </instructionSet>
</instructions>
