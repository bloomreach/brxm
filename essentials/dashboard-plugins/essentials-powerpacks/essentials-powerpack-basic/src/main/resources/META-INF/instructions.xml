<instructions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.onehippo.org/essentials/instructions /instructions.xsd" xmlns="http://www.onehippo.org/essentials/instructions">
  <instructionSet name="NAMESPACE">
    <cnd documentType="newsdocument" superType="@namespace:basedocument,hippostd:relaxed,hippotranslation:translated" />
    <cnd documentType="eventsdocument" superType="@namespace:basedocument,hippostd:relaxed,hippotranslation:translated" />
    <xml action="copy" source="xml/namespaces/newsdocument.xml" target="/hippo:namespaces/@namespace"/>
    <xml action="copy" source="xml/namespaces/eventsdocument.xml" target="/hippo:namespaces/@namespace"/>
  </instructionSet>
  <instructionSet name="QUERIES">
    <xml action="copy" source="xml/folderoptions/new-news-folder.xml" target="/hippo:configuration/hippo:queries/hippo:templates"/>
    <xml action="copy" source="xml/folderoptions/new-news-document.xml" target="/hippo:configuration/hippo:queries/hippo:templates"/>
    <xml action="copy" source="xml/folderoptions/new-events-folder.xml" target="/hippo:configuration/hippo:queries/hippo:templates"/>
    <xml action="copy" source="xml/folderoptions/new-events-document.xml" target="/hippo:configuration/hippo:queries/hippo:templates"/>
  </instructionSet>
  <instructionSet name="ICONS">
    <file action="copy" overwrite="true" source="icons/new-folder-16.png" target="@cmsRoot/src/main/resources/org/hippoecm/frontend/plugins/standardworkflow/new-news-folder-16.png"/>
    <file action="copy" overwrite="true" source="icons/new-folder-16.png" target="@cmsRoot/src/main/resources/org/hippoecm/frontend/plugins/standardworkflow/new-events-folder-16.png"/>
  </instructionSet>
  <instructionSet name="CONTENT">
    <folder path="/content/documents/@namespace/news" template="xml/content/news.xml"/>
    <folder path="/content/documents/@namespace/events" template="xml/content/events.xml"/>
  </instructionSet>
  <instructionSet name="JSP">
    <file action="copy" overwrite="true" source="jsp/essentials-layout-webpage.jsp" target="@jspRoot/essentials/essentials-layout-webpage.jsp"/>
    <file action="copy" overwrite="true" source="jsp/essentials-standard-main.jsp" target="@jspRoot/essentials/essentials-standard-main.jsp"/>
    <file action="copy" overwrite="true" source="jsp/essentials-component-list.jsp" target="@jspRoot/essentials/essentials-component-list.jsp"/>
    <file action="copy" overwrite="true" source="jsp/essentials-component-document.jsp" target="@jspRoot/essentials/essentials-component-document.jsp"/>
    <file action="copy" overwrite="true" source="jsp/essentials-component-news.jsp" target="@jspRoot/essentials/essentials-component-news.jsp"/>
    <file action="copy" overwrite="true" source="jsp/essentials-component-news-detail.jsp" target="@jspRoot/essentials/essentials-component-news-detail.jsp"/>
    <file action="copy" overwrite="true" source="jsp/essentials-component-events.jsp" target="@jspRoot/essentials/essentials-component-events.jsp"/>
    <file action="copy" overwrite="true" source="jsp/essentials-component-event-detail.jsp" target="@jspRoot/essentials/essentials-component-event-detail.jsp"/>
  </instructionSet>
  <instructionSet name="SITE-MAPS">
    <xml action="copy" source="xml/hst/sitemap/news.xml" target="/hst:hst/hst:configurations/@namespace/hst:sitemap"/>
    <xml action="copy" source="xml/hst/sitemap/events.xml" target="/hst:hst/hst:configurations/@namespace/hst:sitemap"/>
  </instructionSet>
  <instructionSet name="JAVA">
    <file action="copy" overwrite="true" source="java/NewsDocument.txt" target="@beansFolder/NewsDocument.java"/>
    <file action="copy" overwrite="true" source="java/EventsDocument.txt" target="@beansFolder/EventsDocument.java"/>
  </instructionSet>
  <instructionSet name="COMPONENTS">
    <xml action="copy" source="xml/hst/components/list.xml" target="/hst:hst/hst:configurations/@namespace/hst:components"/>
    <xml action="copy" source="xml/hst/components/content.xml" target="/hst:hst/hst:configurations/@namespace/hst:components"/>
  </instructionSet>
  <instructionSet name="PAGES">
    <xml action="copy" source="xml/hst/pages/standard.xml" target="/hst:hst/hst:configurations/@namespace/hst:pages"/>
    <xml action="copy" source="xml/hst/pages/newsoverview.xml" target="/hst:hst/hst:configurations/@namespace/hst:pages"/>
    <xml action="copy" source="xml/hst/pages/newspage.xml" target="/hst:hst/hst:configurations/@namespace/hst:pages"/>
    <xml action="copy" source="xml/hst/pages/eventsoverview.xml" target="/hst:hst/hst:configurations/@namespace/hst:pages"/>
    <xml action="copy" source="xml/hst/pages/eventspage.xml" target="/hst:hst/hst:configurations/@namespace/hst:pages"/>
  </instructionSet>
  <instructionSet name="TEMPLATES">
    <xml action="copy" source="xml/hst/templates/layout-webpage.xml" target="/hst:hst/hst:configurations/@namespace/hst:templates"/>
    <xml action="copy" source="xml/hst/templates/standard-main.xml" target="/hst:hst/hst:configurations/@namespace/hst:templates"/>
    <xml action="copy" source="xml/hst/templates/standard-main-overview-content.xml" target="/hst:hst/hst:configurations/@namespace/hst:templates"/>
    <xml action="copy" source="xml/hst/templates/standard-main-content.xml" target="/hst:hst/hst:configurations/@namespace/hst:templates"/>
    <xml action="copy" source="xml/hst/templates/news-main-overview-content.xml" target="/hst:hst/hst:configurations/@namespace/hst:templates"/>
    <xml action="copy" source="xml/hst/templates/news-main-content.xml" target="/hst:hst/hst:configurations/@namespace/hst:templates"/>
    <xml action="copy" source="xml/hst/templates/events-main-overview-content.xml" target="/hst:hst/hst:configurations/@namespace/hst:templates"/>
    <xml action="copy" source="xml/hst/templates/events-main-content.xml" target="/hst:hst/hst:configurations/@namespace/hst:templates"/>
  </instructionSet>
</instructions>