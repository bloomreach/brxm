{
  "name": "@bloomreach/spa-sdk",
  "version": "14.2.2",
  "description": "Bloomreach SPA SDK",
  "keywords": [
    "bloomreach",
    "spa",
    "sdk"
  ],
  "author": "Bloomreach B.V.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://code.onehippo.org/cms-community/bloomreach-spa-sdk",
    "directory": "packages/spa-sdk"
  },
  "bugs": {
    "url": "https://issues.onehippo.com/projects/CMS/issues"
  },
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/index.es6.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "docs": "tsc --emitDeclarationOnly && dts-bundle-generator --out-file dist/spa-sdk.d.ts dist/index.d.ts && typedoc dist/spa-sdk.d.ts && minicat src/docs/typedoc.css >> docs/assets/css/main.css && rm dist/spa-sdk.d.ts",
    "lint": "tslint --project .",
    "prepare": "$npm_execpath run build",
    "test": "jest --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version",
    "last 1 edge version"
  ],
  "devDependencies": {
    "@babel/core": "^7.9",
    "@babel/plugin-proposal-class-properties": "^7.8",
    "@babel/plugin-proposal-object-rest-spread": "^7.9",
    "@babel/plugin-transform-object-assign": "^7.8",
    "@babel/polyfill": "^7.8",
    "@babel/preset-env": "^7.9",
    "@types/jest": "^25.1",
    "@types/xmldom": "^0.1",
    "babel-plugin-transform-async-to-promises": "^0.8",
    "dts-bundle-generator": "^4.0",
    "jest": "^25.2",
    "js-beautify": "^1.10",
    "minicat": "^1.0",
    "rollup": "^2.3",
    "rollup-plugin-babel": "^4.4",
    "rollup-plugin-terser": "^5.3",
    "rollup-plugin-typescript2": "^0.27",
    "ts-jest": "^25.3",
    "tslint": "^6.1",
    "tslint-config-airbnb": "^5.11",
    "typedoc": "^0.17",
    "typescript": "^3.8"
  },
  "dependencies": {
    "emittery": "^0.6",
    "xmldom": "^0.3"
  }
}
