  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <encoding>UTF-8</encoding>
          <version>5</version>
          <manifest>
            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
          </manifest>
          <archive>
            <manifestEntries>
              <Implementation-Build>${buildNumber}</Implementation-Build>
              <Implementation-Version>${project.version}</Implementation-Version>
            </manifestEntries>
          </archive>
          <modules>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-package-skin</artifactId>
              <contextRoot>/skin</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-package-layout</artifactId>
              <contextRoot>/layout</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-xinha</artifactId>
              <contextRoot>/xinha</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-repository-application</artifactId>
              <contextRoot>/repository</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-frontend-application</artifactId>
              <contextRoot>/</contextRoot>
            </webModule>

            <!-- jarModule>
