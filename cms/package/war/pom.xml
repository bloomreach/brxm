<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.hippoecm</groupId>
    <artifactId>hippo-ecm-package</artifactId>
    <version>2.01.00-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>

  <name>Hippo ECM WAR package</name>
  <description>Hippo ECM WAR package</description>
  <groupId>org.hippoecm</groupId>
  <artifactId>hippo-ecm-package-war</artifactId>
  <packaging>war</packaging>

  <scm>
    <connection>scm:svn:http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/package/war</connection>
    <developerConnection>scm:svn:https://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/package/war</developerConnection>
    <url>http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/package/war</url>
  </scm>

  <dependencies>
    <!-- Xinha html editor (must be included before actual front-end application) -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-xinha</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-xinha-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Default application skin (must be included before actual front-end application) -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-package-skin</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>

    <!-- End applications -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-repository-application</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-frontend-application</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    
    <!-- Hippo ECM application configuration -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-package-config</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Builtin workflow plugins -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-builtin-common</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-builtin-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-builtin-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-versioning</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Reusable components -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-standards-common</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-standards-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-standards-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Reviewed actions workflow -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-common</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Template editor -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-template</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Reporting addon -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reporting-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reporting-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- CMS 7 addons-->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-root</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-browse</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-dashboard</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-edit</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-management</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- default content addon -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-defaultcontent-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>

    <!-- hst add-on -->
    <dependency>
      <groupId>org.hippoecm.hst</groupId>
      <artifactId>hippo-ecm-hst-addon-repository</artifactId>
      <version>2.01.00-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm.hst</groupId>
      <artifactId>hippo-ecm-hst-sample-content</artifactId>
      <version>2.01.00-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
      
  </dependencies>

  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.1-alpha-1</version>
        <configuration>
          <overlays>
            <!-- repeat this overlay for all applications that use the skin -->
            <overlay>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-package-skin</artifactId>
              <targetPath>skin</targetPath>
              <excludes>
                <exclude>WEB-INF/web.xml</exclude>
              </excludes>
            </overlay>
            <overlay>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-xinha</artifactId>
              <targetPath>xinha</targetPath>
              <excludes>
                <exclude>WEB-INF/web.xml</exclude>
              </excludes>
            </overlay>
          </overlays>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>maven-jetty-plugin</artifactId>
        <version>6.1.3</version>
        <configuration>
          <scanIntervalSeconds>5</scanIntervalSeconds>
          <connectors>
            <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
              <port>8080</port>
            </connector>
          </connectors>
          <contextPath>/</contextPath>
        </configuration>
        <dependencies>
          <!-- atomikos dependecies for running jetty:run[-war|-exploded] -->
          <dependency>
            <groupId>com.atomikos</groupId>
            <artifactId>transactions-api</artifactId>
            <version>3.1.4</version>
            <scope>runtime</scope>
          </dependency>
          <dependency>
            <groupId>com.atomikos</groupId>
            <artifactId>transactions-jta</artifactId>
            <version>3.1.4</version>
            <scope>runtime</scope>
          </dependency>
          <dependency>
            <groupId>com.atomikos</groupId>
            <artifactId>transactions</artifactId>
            <version>3.1.4</version>
            <scope>runtime</scope>
          </dependency>
          <dependency>
            <groupId>com.atomikos</groupId>
            <artifactId>atomikos-util</artifactId>
            <version>3.1.4</version>
            <scope>runtime</scope>
          </dependency>
        </dependencies>
      </plugin>
      <!-- plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <dependentWarExcludes>WEB-INF/classes/org/hippoecm/repository/**</dependentWarExcludes>
        </configuration>
      </plugin -->
    </plugins>
  </build>

</project>
