<sv:node sv:name="cms-validators" xmlns:sv="http://www.jcp.org/jcr/sv/1.0" xmlns:h="http://www.onehippo.org/jcr/xmlimport" h:merge="combine">

  <sv:node sv:name="validationTranslator" h:merge="combine">
    <sv:node sv:name="hippostd:translations" h:merge="combine">

      <sv:node sv:name="non-empty" h:merge="combine">
        <sv:node sv:name="hippo:translation">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:translation</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:language" sv:type="String">
            <sv:value>de</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:message" sv:type="String">
            <sv:value>Ein String Feld ist leer</sv:value>
          </sv:property>
        </sv:node>
      </sv:node>

      <sv:node sv:name="escaped" h:merge="combine">
        <sv:node sv:name="hippo:translation">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:translation</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:language" sv:type="String">
            <sv:value>de</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:message" sv:type="String">
            <sv:value>Ungültiges Zeichen verwendet</sv:value>
          </sv:property>
        </sv:node>
      </sv:node>

      <sv:node sv:name="email" h:merge="combine">
        <sv:node sv:name="hippo:translation">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:translation</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:language" sv:type="String">
            <sv:value>de</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:message" sv:type="String">
            <sv:value>Keine gültige E-Mail-Adresse in Feld eingegeben.</sv:value>
          </sv:property>
        </sv:node>
      </sv:node>

    </sv:node>
  </sv:node>

</sv:node>