<Configuration>
  <Appenders>

    <!-- console -->
    <Console name="console" target="SYSTEM_OUT">
      <StringMatchFilter/>
      <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} %-5p [%C.%M():%L] %m%n"/>
    </Console>

    <!-- log4j.log -->
    <File name="root" fileName="target/log4j.log">
      <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} %-5p %t [%C.%M():%L] %m%n"/>
    </File>

  </Appenders>
  <Loggers>

    <Logger additivity="true" name="org.apache.wicket.Localizer" level="error">
      <AppenderRef ref="root"/>
    </Logger>

    <!-- Suppress un-relevant HTMLUnit warnings and errors -->
    <Logger name="com.gargoylesoftware.htmlunit" level="off"/>

    <!-- Suppress un-relevant HTMLUnit warnings and errors -->
    <Logger name="net.sf.json" level="off"/>

    <!-- Suppress org.hippoecm.frontend.model.properties that we are aware of during tests -->
    <Logger name="org.hippoecm.frontend.model.properties" level="fatal"/>

    <!-- Suppress org.apache.jackrabbit.core that we are aware of during tests -->
    <Logger name="org.apache.jackrabbit.core" level="error"/>

    <Root level="warn">
      <AppenderRef ref="console"/>
      <AppenderRef ref="root"/>
    </Root>

  </Loggers>
</Configuration>
