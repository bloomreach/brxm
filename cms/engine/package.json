{
  "name": "hippo-cms-engine",
  "license": "Apache-2.0",
  "private": true,
  "config": {
    "navappBridgePath": "./src/main/java/org/hippoecm/frontend/navapp-bridge.js",
    "targetPath": "./target/classes/org/hippoecm/frontend/"
  },
  "scripts": {
    "lint": "eslint $npm_package_config_navappBridgePath",
    "watch": "chokidar $npm_package_config_navappBridgePath -c \"cp $npm_package_config_navappBridgePath $npm_package_config_targetPath\"",
    "build": "node copy-files.js",
    "test": "karma start"
  },
  "dependencies": {
    "@bloomreach/navapp": "1.4.0",
    "@bloomreach/navapp-communication": "2.0.0",
    "penpal": "4.1.1"
  },
  "devDependencies": {
    "chokidar-cli": "2.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-plugin-compat": "3.5.1",
    "eslint-plugin-import": "2.20.2",
    "file-system": "2.2.2"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version",
    "last 1 edge version"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-base"
    ],
    "plugins": [
      "eslint-plugin-compat"
    ],
    "env": {
      "browser": true,
      "jasmine": true
    },
    "globals": {
      "Hippo": true
    },
    "rules": {
      "strict": "off",
      "max-len": "off",
      "no-console": "off"
    }
  }
}
