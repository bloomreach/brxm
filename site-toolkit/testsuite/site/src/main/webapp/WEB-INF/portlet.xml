<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
    
    <portlet id="NewsPortlet">
        <description>This is the News portlet</description>
        <portlet-name>NewsPortlet</portlet-name>
        <display-name>NewsPortlet</display-name>
        <portlet-class>org.hippoecm.hst.container.HstContainerPortlet</portlet-class>
        <init-param>
            <name>hstServletPath</name>
            <value>/preview</value>
        </init-param>
        <init-param>
            <name>hstPathInfo</name>
            <value>/news</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>NewsPortlet</title>
            <short-title>NewsPortlet</short-title>
            <keywords>news</keywords>
        </portlet-info>
    </portlet>
    
</portlet-app>
